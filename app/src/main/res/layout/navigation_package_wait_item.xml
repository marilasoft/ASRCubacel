<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="16dp"
    android:layout_marginTop="8dp"
    android:layout_marginRight="16dp"
    android:layout_marginBottom="8dp"
    android:orientation="vertical"
    app:cardCornerRadius="15dp"
    app:cardElevation="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_buy_title"
            android:layout_width="match_parent"
            android:layout_height="18sp"
            android:layout_margin="16dp"
            android:background="@drawable/rounded_wait"
            android:orientation="vertical"
            android:textAlignment="center" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"
            android:gravity="center">

            <com.mikhaellopez.circularprogressbar.CircularProgressBar
                android:id="@+id/cpb_consumption_progress"
                android:layout_width="150dp"
                android:layout_height="150dp"
                app:cpb_background_progressbar_color="#b6bbd8"
                app:cpb_background_progressbar_width="10dp"
                app:cpb_indeterminate_mode="true"
                app:cpb_progress="0"
                app:cpb_progress_direction="to_right"
                app:cpb_progressbar_color="@color/colorAccent"
                app:cpb_progressbar_width="10dp"
                app:cpb_round_border="false" />

            <LinearLayout
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/ll_buy_rest"
                        android:layout_width="100dp"
                        android:layout_height="18sp"
                        android:layout_marginBottom="8dp"
                        android:background="@drawable/rounded_wait"
                        android:orientation="vertical"
                        android:textAlignment="center" />

                    <LinearLayout
                        android:id="@+id/ll_buy_unit"
                        android:layout_width="100dp"
                        android:layout_height="18sp"
                        android:background="@drawable/rounded_wait"
                        android:orientation="vertical"
                        android:textAlignment="center" />
                </LinearLayout>
            </LinearLayout>

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/ll_buy_date"
            android:layout_width="200dp"
            android:layout_height="14sp"
            android:layout_gravity="center"
            android:background="@drawable/rounded_wait"
            android:orientation="vertical" />

        <LinearLayout
            android:id="@+id/ll_buy_description_action"
            android:layout_width="140dp"
            android:layout_height="18sp"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/rounded_wait"
            android:orientation="vertical" />

    </LinearLayout>
</androidx.cardview.widget.CardView>