<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.forgot.ForgotStepTwoFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="15dp"
            app:cardElevation="8dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/tv_code_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginBottom="16dp"
                    android:gravity="center"
                    android:text="@string/code_rp_info"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/imageView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@id/et_code"
                    android:layout_alignTop="@id/et_code"
                    android:layout_alignBottom="@id/et_code"
                    android:paddingLeft="10dp"
                    android:paddingTop="5dp"
                    android:paddingRight="10dp"
                    android:paddingBottom="5dp"
                    app:srcCompat="@drawable/ic_blur_on_black_24dp" />

                <EditText
                    android:id="@+id/et_code"
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_code_info"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/rounded_edit_text"
                    android:ems="10"
                    android:inputType="number"
                    android:paddingLeft="45dp"
                    android:paddingTop="5dp"
                    android:paddingRight="45dp"
                    android:paddingBottom="5dp" />

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@id/et_new_password"
                    android:layout_alignTop="@id/et_new_password"
                    android:layout_alignBottom="@id/et_new_password"
                    android:paddingLeft="10dp"
                    android:paddingTop="5dp"
                    android:paddingRight="10dp"
                    android:paddingBottom="5dp"
                    app:srcCompat="@drawable/ic_lock_outline_black_24dp" />

                <EditText
                    android:id="@+id/et_new_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/et_code"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/rounded_edit_text"
                    android:ems="10"
                    android:hint="@string/new_password"
                    android:inputType="textPassword"
                    android:paddingLeft="45dp"
                    android:paddingTop="5dp"
                    android:paddingRight="45dp"
                    android:paddingBottom="5dp" />

                <ImageButton
                    android:id="@+id/imageButton3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/et_new_password"
                    android:layout_alignRight="@id/et_new_password"
                    android:layout_alignBottom="@id/et_new_password"
                    android:background="#00000000"
                    android:paddingLeft="10dp"
                    android:paddingTop="5dp"
                    android:paddingRight="10dp"
                    android:paddingBottom="5dp"
                    app:srcCompat="@drawable/ic_visibility_black_24dp" />

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@id/et_repeat_password"
                    android:layout_alignTop="@id/et_repeat_password"
                    android:layout_alignBottom="@id/et_repeat_password"
                    android:paddingLeft="10dp"
                    android:paddingTop="5dp"
                    android:paddingRight="10dp"
                    android:paddingBottom="5dp"
                    app:srcCompat="@drawable/ic_lock_outline_black_24dp" />

                <EditText
                    android:id="@+id/et_repeat_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/et_new_password"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/rounded_edit_text"
                    android:ems="10"
                    android:hint="@string/repeat_new_password"
                    android:inputType="textPassword"
                    android:paddingLeft="45dp"
                    android:paddingTop="5dp"
                    android:paddingRight="45dp"
                    android:paddingBottom="5dp" />

                <ImageButton
                    android:id="@+id/imageButton4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/et_repeat_password"
                    android:layout_alignRight="@id/et_repeat_password"
                    android:layout_alignBottom="@id/et_repeat_password"
                    android:background="#00000000"
                    android:paddingLeft="10dp"
                    android:paddingTop="5dp"
                    android:paddingRight="10dp"
                    android:paddingBottom="5dp"
                    app:srcCompat="@drawable/ic_visibility_black_24dp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/et_repeat_password"
                    android:gravity="center">

                    <ImageButton
                        android:id="@+id/ib_finish"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_margin="16dp"
                        android:background="@drawable/rounded_button_buy"
                        app:srcCompat="@drawable/ic_arrow_forward_black_24dp" />
                </RelativeLayout>

            </RelativeLayout>
        </androidx.cardview.widget.CardView>

    </RelativeLayout>
</FrameLayout>